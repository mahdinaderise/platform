@model LoginViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>بورداش - قالب داشبرد ادمین</title>

    <!-- Favicon -->
    <link href="~/assets/media/image/favicon.png" />

    <!-- Plugin styles -->
    <link href="~/vendors/bundle.css" rel="stylesheet" />

    <!-- App styles -->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
</head>
<body class="form-membership">

    <!-- begin::preloader-->
    <div class="preloader">
        <div class="preloader-icon"></div>
    </div>
    <!-- end::preloader -->

    <div class="form-wrapper">

        <!-- logo -->
        <div id="logo">
            <img src="~/assets/media/image/logo.png" />

            <img class="logo-dark" src="assets/media/image/logo-dark.html" alt="image">
        </div>
        <!-- ./ logo -->

        <h5>ورود</h5>

        <!-- form -->
        <form asp-controller="Account" asp-action="LoginConsultant" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="text-danger">@ViewData["ErrorMessage"]</div>
            }

        <div class="form-group">
            <input type="text" class="form-control" placeholder="نام کاربری  " asp-for="UserName" required autofocus>
            <span asp-validation-for="UserName" class="text-danger"></span>

        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="رمزعبور" required asp-for="Password">
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
            <div class="form-group d-flex justify-content-between">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" checked="" id="customCheck1" asp-for="RememberMe">
                    <label class="custom-control-label" for="customCheck1" asp-for="RememberMe"></label>
                </div>
                @*<a href="recover-password.html">بازگردانی رمزعبور</a>*@
            </div>
            <button class="btn btn-primary btn-block">ورود</button>

            <hr>
            <p class="text-muted"> اکانت ندارید؟</p>
            <a href="register.html" class="btn btn-outline-light btn-sm">  ثبت نام کنید!</a>
        </form>
        <!-- ./ form -->

    </div>

    <!-- Plugin scripts -->
    <script src="~/vendors/bundle.js"></script>
    <!-- App scripts -->
    <script src="~/assets/js/app.min.js"></script>
</body>

</html>
