@model RegisterViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> صفحه ثبت نام  </title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="assets/media/image/favicon.png" />

    <!-- Plugin styles -->
    <link href="~/vendors/bundle.css" rel="stylesheet" />

    <!-- App styles -->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
</head>
<body class="form-membership">

    <!-- begin::preloader-->
    <div class="preloader">
        <div class="preloader-icon"></div>
    </div>
    <!-- end::preloader -->

    <div class="form-wrapper">

        <!-- logo -->
        @*<div id="logo">
            <img class="logo" src="assets/media/image/logo-F.png" alt="image">
            <img class="logo-dark" src="assets/media/image/logo-dark.html" alt="image">
        </div>*@
        <!-- ./ logo -->

        <h5>ساخت اکانت</h5>

        <!-- form -->
        <form asp-action="RegisterStudent" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <input type="text" class="form-control" placeholder="نام کاربری" required autofocus asp-for="UserName">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="نام " required asp-for="Name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="نام خانوادگی " required asp-for="Family">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="کد ملی " required asp-for="NationalCode">
            </div>
            <div class="form-group">
                <input type="email" class="form-control" placeholder="ایمیل " required asp-for="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="رمزعبور" required asp-for="Password">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="تکرار رمزعبور" required asp-for="ConfirmPassword">
            </div>
            <button type="submit" class="btn btn-primary btn-block">ثبت‌نام</button>
            <hr>
            <p class="text-muted">اکانت دارید?</p>
            <a href="login.html" class="btn btn-outline-light btn-sm"> ورود!</a>
        </form>
        <!-- ./ form -->

    </div>

    <!-- Plugin scripts -->
    <script src="~/vendors/bundle.js"></script>
    <!-- App scripts -->
    <script src="~/assets/js/app.min.js"></script>

</body>

</html>
