@model ResetPasswordViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title> ایجاد کلمه عبور جدید   </title>

    <!-- Favicon -->
    <link href="~/assets/media/image/favicon.png" />

    <!-- Plugin styles -->
    <link href="~/vendors/bundle.css" rel="stylesheet" />

    <!-- App styles -->
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
</head>
<body class="form-membership">

    <!-- begin::preloader-->
    <div class="preloader">
        <div class="preloader-icon"></div>
    </div>
    <!-- end::preloader -->

    <div class="form-wrapper">

        <!-- logo -->
        @*<div id="logo">
            <img src="~/assets/media/image/logo.png" />

            <img class="logo-dark" src="assets/media/image/logo-dark.html" alt="image">
        </div>*@
        <!-- ./ logo -->

        <h5> ایجاد کلمه عبور جدید </h5>

        <!-- form -->
        
        <!-- ./ form -->
        <form asp-controller="Account" asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly"></div>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="text-danger">@ViewData["ErrorMessage"]</div>
            }
            <div class="form-group">
                <input asp-for="NewPassword" class="form-control" placeholder="رمز جدید" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmNewPassword" class="form-control" placeholder=" تکرار رمز جدید" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <input hidden="" asp-for="Token" />
            <input hidden="" asp-for="Email" />
            <button type="submit" class="btn btn-primary btn-block">ارسال</button>

        </form>
    </div>

    <!-- Plugin scripts -->
    <script src="~/vendors/bundle.js"></script>
    <!-- App scripts -->
    <script src="~/assets/js/app.min.js"></script>
</body>

</html>
