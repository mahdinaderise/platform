    <div class="row">
        @if (Model.Degree.Count != 0)
        {
            @foreach (var item in Model.Degree)
            {

                <div class="col-12" style="margin-bottom:20px">
                    <div class="card">

                        @if (item.type == "Melli")
                        {<div class="card-body">
                                <h6 class=" card-title">عکس کارت ملی</h6>
                            </div>
                            <img src="/images/Degree/@(ViewBag.id)m.jpg" class="card-img-top" alt="image">

