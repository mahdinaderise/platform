@model Blog
@{
    ViewData["Title"] = "EditPost";
    Layout = "~/Views/Shared/_LayoutConsultant.cshtml";
}

<h1>EditPost</h1>
<div class="main-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                @foreach (var item in Model.blog)
                {
                    <form asp-controller="Consultant" asp-action="EditPost" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <textarea rows="2" class="form-control" placeholder="چیزی بنویسید" asp-for="@item.Note"></textarea>
                        </div>
                        <div class="text-right">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <a href="#" data-toggle="tooltip" title="افزودن تصویر"
                                       class="btn btn-outline-light">
                                        <input asp-for="Picture" accept=".jpg" required />
                                        <i data-feather="image"></i>
                                    </a>
                                </li>
                                @*<li class="list-inline-item">
                                <a href="#" data-toggle="tooltip" title="افزودن ویدئو"
                                   class="btn btn-outline-light">
                                    <i data-feather="video"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#" data-toggle="tooltip" title="افزودن فایل"
                                   class="btn btn-outline-light">
                                    <i data-feather="file"></i>
                                </a>
                            </li>*@
                                <li class="list-inline-item">
                                    <button class="btn btn-primary">ارسال</button>
                                </li>
                            </ul>
                        </div>
                    </form>
                }
            </div>

        </div>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel">
                @foreach (var item in Model.blog)
                {
                    <div class="card">
                        <div class="card-body">

                            <p>@item.Note</p>
                            <div class="row row-xs">
                                <div class="col-12">
                                    <img src="/images/@(item.ID).JPG" class="w-100 border-radius-1"
                                         alt="image">
                                </div>

                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                @*<div>
                                    <a href="#" title="لایک" data-toggle="tooltip">
                                        <i data-feather="heart"
                                           class="width-17 height-17 mr-1"></i> 311
                                    </a>
                                </div>*@

                            </div>
                        </div>
                    </div>

                }

            </div>


        </div>
    </div>
</div>

